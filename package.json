{
    "name": "doorlock",
    "description": "Electronic door lock system for home automation",
    "version": "1.0.0",
    "main": "dist/index.js",
    "type": "module",
    "author": "Antti <antti@antti.codes>",
    "license": "MIT",
    "private:": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Chicken/DoorLock.git"
    },
    "bugs": {
        "url": "https://github.com/Chicken/DoorLock/issues"
    },
    "homepage": "https://github.com/Chicken/DoorLock#readme",
    "keywords": [
        "door",
        "lock",
        "automation",
        "homeautomation",
        "iot"
    ],
    "scripts": {
        "start": "node --enable-source-maps -r dotenv/config --no-warnings .",
        "dev": "yarn build && NODE_ENV=development yarn start",
        "build": "tsc -b",
        "watch": "tsc -b -w",
        "format": "prettier --write .",
        "lint": "eslint src --ext ts --fix",
        "update": "yarn upgrade-interactive"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "consistent",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "ignorePatterns": [
            "node_modules/",
            "dist/",
            ".yarn/"
        ],
        "rules": {
            "@typescript-eslint/no-non-null-assertion": "off"
        }
    },
    "engines": {
        "node": ">=18",
        "npm": ">=7"
    },
    "dependencies": {
        "colorette": "^2.0.19",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "onoff": "^6.0.3",
        "serialport": "^10.5.0",
        "tslib": "^2.4.1"
    },
    "devDependencies": {
        "@sapphire/ts-config": "^3.3.4",
        "@types/express": "^4",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4"
    },
    "packageManager": "yarn@3.3.1"
}

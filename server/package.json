{
    "name": "server",
    "private:": true,
    "version": "1.0.0",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "start": "node --enable-source-maps -r dotenv/config --no-warnings .",
        "dev": "tsc-watch -b --onSuccess \"sh -c 'NODE_ENV=development yarn start'\"",
        "build": "tsc -b",
        "format": "prisma format",
        "lint": "eslint src --ext ts --fix",
        "update": "yarn upgrade-interactive"
    },
    "dependencies": {
        "@prisma/client": "4.9.0",
        "@trpc/server": "^10.9.0",
        "colorette": "^2.0.19",
        "dotenv": "^16.0.3",
        "jsonwebtoken": "^9.0.0",
        "onoff": "^6.0.3",
        "serialport": "^10.5.0",
        "tslib": "^2.4.1",
        "ws": "^8.12.0",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@types/jsonwebtoken": "^9.0.1",
        "@types/node": "^18.11.18",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.6.0",
        "prisma": "^4.9.0",
        "tsc-watch": "^6.0.0",
        "typescript": "^4.9.4"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "ignorePatterns": [
            "node_modules/",
            "dist/",
            ".yarn/"
        ],
        "rules": {
            "@typescript-eslint/no-non-null-assertion": "off"
        }
    }
}
